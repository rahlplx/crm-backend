# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Replace <db_password> with your actual MongoDB password
DB_URI=mongodb+srv://username:<db_password>@cluster.mongodb.net/dbname?appName=AppName

# JWT Configuration
# Generate a secure random string for production: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=2d
JWT_COOKIE_EXPIRES_IN=2

# Password Hashing
# Higher number = more secure but slower (10-12 is good for production)
BCRYPT_SALT_ROUNDS=10

# Encryption Key for Social Media Passwords
# Generate a secure key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Change this in production!
ENCRYPTION_KEY=8e3eb45ef5736d9337c293a241d0a7954bbd869e570c4c6e5e008f13bfdb6f3c
